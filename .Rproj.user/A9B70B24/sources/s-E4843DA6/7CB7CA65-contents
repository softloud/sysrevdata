library(janitor)
library(tidyverse)

# import data
example_dat <- 
  read_csv("data-raw/Haddawayetal2018bufferstrips.csv") %>% 
  # clean column names to snake_case
  clean_names()

# condense studydesign variables into a condensed (nested) variable
# text makes this easier than, say, numerics
# for other types, create a list-column (todo)
example_dat %>% 
  unite(col = "study_design", 
        studydesign_observational, 
        studydesign_manipulative,
        sep = ";",
        remove = TRUE)

